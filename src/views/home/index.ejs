<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Node.Js Basic</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="topnav">
        <a class="active" href="#home">Home</a>
        <a href="#news">News</a>
        <a href="#contact">Contact</a>
        <a href="#about">About</a>
      </div>
      
      <div style="padding-left:16px">
        <h2>List users</h2>
        <table id="customers">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Frist name</th>
                    <th>Last name</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i=0; i < dataUser.length; i++) { %>
                    <tr>
                      <td><%= dataUser[i].id %></td>
                      <td><%= dataUser[i].first_name %></td>
                      <td><%= dataUser[i].last_name %></td>
                      <td><%= dataUser[i].email %></td>
                      <td><%= dataUser[i].address %></td>
                      <td>
                        <a href="/detail/user/<%= dataUser[i].id %>" target="_blank">Detail</a>
                        <form action="/edit-user/<%= dataUser[i].id %>" method="GET">
                            <button type="submit">Edit</button>
                        </form>
                        <form action="/delete-user" method="POST">
                            <input type="text" hidden value="<%= dataUser[i].id %>" name="userId">
                            <button type="submit">Delete</button>
                        </form>
                      </td>
                    </tr>
                 <% } %>
            </tbody>
          </table>
    </div>

    <div id="form-add">
      <h1>Create user</h1>
      <form action="/add-user" method="POST">
        <label for="fname">First name:</label>
        <input type="text" name="first_name"><br><br>
        <label for="lname">Last name:</label>
        <input type="text" name="last_name"><br><br>
        <label for="lname">Email:</label>
        <input type="email" name="email"><br><br>
        <label for="lname">Address:</label>
        <input type="text" name="address"><br><br>


        <input type="submit" value="Submit">
      </form>
    </div>
</body>
</html>